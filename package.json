{
  "name": "iop-build-tools",
  "version": "0.11.0",
  "description": "Bundling our webpack build-chain into Docker",
  "bugs": "https://github.com/ideasonpurpose/docker-build/issues",
  "repository": "ideasonpurpose/docker-build",
  "license": "ISC",
  "author": "Ideas On Purpose (https://www.ideasonpurpose.com/)",
  "contributors": [
    "Joe Maller <joe@ideasonpurpose.com>"
  ],
  "type": "module",
  "main": "index.js",
  "scripts": {
    "analyze": "WEBPACK_BUNDLE_ANALYZER=true webpack",
    "postanalyze": "node explore.js",
    "browsersync": "node browsersync.js",
    "build": "NODE_ENV=production webpack --color --stats-errors",
    "postbuild": "npm run zip",
    "build:debug": "node --inspect-brk=0.0.0.0 node_modules/.bin/webpack",
    "postbuild:debug": "npm run zip:debug",
    "devserver": "npm run start",
    "env": "env",
    "explore": "source-map-explorer",
    "node-sass": "node-sass --include-path /usr/src/site/wp-content/themes/iop-njhi/src/sass /usr/src/site/wp-content/themes/iop-njhi/src/sass/main.scss",
    "preview": "node browsersync.js",
    "start": "webpack serve",
    "start:debug": "node --inspect=0.0.0.0 node_modules/.bin/webpack serve",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "version": "version-everything && auto-changelog && git add -u",
    "watch": "webpack --progress --profile --watch --color --display-error-details",
    "webpack": "node --trace-deprecation node_modules/webpack/bin/webpack.js",
    "webpack:profile": "webpack --profile --progress --json > /usr/src/site/webpack/stats.json",
    "zip": "node zip.js",
    "zip:debug": "node --inspect-brk=0.0.0.0 zip.mjs"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverage": true,
    "moduleNameMapper": {
      "#(.*)": "<rootDir>/node_modules/$1"
    },
    "testTimeout": 500,
    "transform": {},
    "verbose": true
  },
  "dependencies": {
    "@babel/core": "^7.17.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-react-jsx-source": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "ansi-html": "^0.0.9",
    "archiver": "^5.3.0",
    "auto-changelog": "^2.4.0",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.3",
    "body-parser": "^1.19.2",
    "browser-sync": "^2.27.9",
    "caniuse-lite": "^1.0.30001317",
    "chalk": "^5.0.1",
    "copy-webpack-plugin": "^10.2.3",
    "core-js": "^3.21.1",
    "cosmiconfig": "^7.0.1",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.4",
    "dotenv": "^16.0.0",
    "esbuild-loader": "^2.18.0",
    "filesize": "^8.0.7",
    "fs-extra": "^10.0.1",
    "globby": "^13.1.1",
    "http-proxy": "^1.18.1",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "is-ip": "^4.0.0",
    "is-text-path": "^2.0.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.6.0",
    "node-sass": "^7.0.1",
    "ora": "^6.1.0",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "pretty-hrtime": "^1.0.3",
    "replacestream": "^4.0.3",
    "sass": "^1.49.9",
    "sass-embedded": "^1.49.9",
    "sass-loader": "^12.6.0",
    "source-map-explorer": "^2.5.2",
    "style-loader": "^3.3.1",
    "svgo": "^2.6.1",
    "version-everything": "^0.7.4",
    "webpack": "^5.70.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1",
    "webpack-dev-server": "^4.7.4",
    "webpack-hot-middleware": "^2.25.1"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
    "jest": "^27.5.1"
  },
  "auto-changelog": {
    "package": true,
    "commitLimit": 7
  },
  "version-everything": {
    "files": [
      "README.md",
      "Dockerfile"
    ]
  }
}
